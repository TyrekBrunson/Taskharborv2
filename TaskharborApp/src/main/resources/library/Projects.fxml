<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.event.ActionEvent?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import java.net.*?>
<?import javafx.scene.control.MenuItem?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ProjectController" alignment="TOP_CENTER" spacing="10" fillWidth="true">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit"/>
        </Menu>
    </MenuBar>

    <VBox VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
        <TilePane fx:id="projectsPage" hgap="10" prefTileHeight="150" prefTileWidth="200" vgap="10">
            <VBox styleClass="header">
                <Button onAction="#addProject" text="Add Project"/>
            </VBox>
            <!-- Remove unnecessary TitledPane -->
        </TilePane>
    </VBox>
    <VBox styleClass="footer">
        <Button onAction="#goBack" styleClass="back-button" text="Back"/>
    </VBox>
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</VBox>