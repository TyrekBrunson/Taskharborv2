<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <TextField fx:id="usernameField" layoutX="50" layoutY="50" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="50" layoutY="80" promptText="Password" />
        <Button layoutX="50" layoutY="120" onAction="#onLoginClicked" text="Login" />
        <Text fx:id="loginMessage" layoutX="50" layoutY="150" />
    </children>
</AnchorPane>
