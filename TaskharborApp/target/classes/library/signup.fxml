<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.*?>

<BorderPane id="AnchorPane" prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignupController">
    <center>
        <VBox fx:id="centeredContainer" alignment="CENTER" spacing="10" styleClass="login-pane">
            <TextField fx:id="firstNameField" promptText="First Name" />
            <TextField fx:id="lastNameField" promptText="Last Name" />
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button onAction="#onSignupClicked" text="Signup" styleClass="button" />
            <Text fx:id="signupMessage" />
            <Button onAction="#goBack" text="Back" styleClass="back-button" />
            <Button onAction="#onLoginClicked" text="Login" styleClass="button" />
        </VBox>
    </center>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</BorderPane>
